                    <Label Text="Class Room Details" HorizontalOptions="Center" FontAttributes="Bold" FontSize="Large" FontFamily=" Times New Roman"/>
                    <Image:CircleImage Source="classroom.png" Aspect="AspectFill" WidthRequest="120" HeightRequest="120" BorderColor="AliceBlue" BorderThickness="2"  HorizontalOptions="Center"  ></Image:CircleImage>
                    <Label Text="Class Room :"  FontSize="Medium" FontFamily="Times New Roman" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label x:Name="class"  FontSize="Small" HorizontalOptions="Center"/>
                    <Label Text="Does PRojector Screen Working Efficiently ? :" FontFamily="Times New Roman" FontSize="Medium" FontAttributes="Bold" />
                    <Label x:Name="proscreen" ></Label>
                    <Label Text="Any Comment :" FontSize="Medium" FontFamily="Times New Roman" FontAttributes="Bold"/>
                    <Label x:Name="procomment" />
                    <Label Text="Rating : " Grid.Row="0" FontSize="Medium" FontFamily="Times New Roman" FontAttributes="Bold"/>
                    <Label x:Name="prorate"  Grid.Row="0" Grid.Column="1" />
                    <BoxView Color="Gray" HeightRequest="1" WidthRequest="59"/>
                    <Label Text="Condition of Benches ? :" FontSize="Medium" FontFamily="Times New Roman" FontAttributes="Bold" />
                    <Label x:Name="Bencon" ></Label>
                    <Label Text="Any Comment :" FontSize="Medium" FontFamily="Times New Roman" FontAttributes="Bold"/>
                    <Label x:Name="Bencom" />
                    <Label Text="Rating : " Grid.Row="0" FontSize="Medium" FontFamily="Times New Roman" FontAttributes="Bold"/>
                    <Label x:Name="Benrate"  Grid.Row="0" Grid.Column="1" />
                    <BoxView Color="Gray" HeightRequest="1" WidthRequest="59"/>
                    <Label Text="Does Fans Working PRoperly ? :" FontSize="Medium" FontFamily="Times New Roman" FontAttributes="Bold" />
                    <Label x:Name="Fanproper" ></Label>
                    <Label Text="Any Comment :" FontSize="Medium" FontFamily="Times New Roman" FontAttributes="Bold"/>
                    <Label x:Name="Fancom" />
                    <Label Text="Rating : " Grid.Row="0" FontSize="Medium" FontFamily="Times New Roman" FontAttributes="Bold"/>
                    <Label x:Name="Fanrate"  Grid.Row="0" Grid.Column="1" />
                    <BoxView Color="Gray" HeightRequest="1" WidthRequest="59"/>
                    <Label Text="Does Light working Properly ? :" FontSize="Medium" FontFamily="Times New Roman" FontAttributes="Bold" />
                    <Label x:Name="Lightwork" ></Label>
                    <Label Text="Any Comment :" FontSize="Medium" FontFamily="Times New Roman" FontAttributes="Bold"/>
                    <Label x:Name="Lightcom" />
                    <Label Text="Rating : " Grid.Row="0" FontSize="Medium" FontFamily="Times New Roman" FontAttributes="Bold"/>
                    <Label x:Name="Lightrate"  Grid.Row="0" Grid.Column="1" />
                    <BoxView Color="Gray" HeightRequest="1" WidthRequest="59"/>
                    <Label Text="Does Class is clean everyday ? :" FontSize="Medium" FontFamily="Times New Roman" FontAttributes="Bold" />
                    <Label x:Name="classclean" ></Label>


                </StackLayout>
            </local:GradientColorStack>
        </ScrollView>
            
